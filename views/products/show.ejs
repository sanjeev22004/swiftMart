<% layout("layout/boilerplate") -%>


<div class="container mt-5">
    <div class="row">
        <!-- Left Part: Product Details -->
        <div class="col-lg-6">
            <div class="card">
                <h5>where is image</h5>
                <img src="<%= productInfo.img %>" class="card-img-top" alt="Product Image">
                <div class="card-body">
                    <h5 class="card-title"><%= productInfo.name %></h5>
                    <p class="card-text">Price: $<%= productInfo.price %></p>
                    <p class="card-text"><%= productInfo.desc %></p>
                    <a href="/products/<%= productInfo.id %>/edit">edit</a>
                    <form method="post" action="/products/<%= productInfo.id %>?_method=DELETE">
                        <button type="submit">Delete</button>
                    </form>
                    
                    <!-- Add more product details as needed -->
                </div>
            </div>
        </div>

        <!-- Right Part: Review and Comment Section -->
        <div class="col-lg-6">
            <h2>Product Reviews</h2>
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Leave a Review</h5>
                    <form id="reviewForm" action="/products/<%= productInfo._id %>/review" method="POST">
                        <div class="form-group">
                            <label for="rating">Rating:</label>
                            <select class="form-control" id="rating" name="rating">
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="comment">Comment:</label>
                            <textarea class="form-control" id="comment" name="comment" rows="3"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                    <div class="mb-3">

                        <% for(let review of productInfo.reviews) {  %>
                            console.log( "<%= review.comment %>");
                            <div class="card mb-3">
                                <div class="card-body">
                                    <h6 class="card-subtitle mb-2 text-muted">Rating: <%= review.rating %></h6>
                                    <p class="card-text"><%= review.comment %></p>
                                </div>
                            </div>
                        <% } %>

                    </div>

                </div>
            </div>
            <!-- Add more reviews and comments as needed -->
        </div>
        
    </div>
</div>